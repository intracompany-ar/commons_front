{
    "compilerOptions": {
        "target": "ES2020",                       // Ideal para ESM + async/await moderno
        "module": "NodeNext",                     // ðŸ§  Clave para ESM real con soporte de .js/.ts
        "moduleResolution": "NodeNext",           // ðŸ§  Necesario para que resuelva bien las rutas ESM
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src", "src/types/media.d.ts", "src/types/types.d.ts", "src/shims-vue.d.ts"]
}